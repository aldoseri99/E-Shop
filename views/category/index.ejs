<h3 class="category-header">categories</h3>

<div class="category-container">
  <% categories.forEach(function(category){ %>

  <a href="/category/details?id=<%= category._id %>">
    <div class="category-card">
      <h2 category-name><%= category.name %></h2>

      <% if(user){ if(user.type === 'seller' || user.type === 'admin') { %>
      <a href="/category/edit?id=<%= category._id %>"><i class="fa-solid fa-pen-to-square"></i></a>
      <a href="/category/delete?id=<%= category._id %>"><i class="fa-solid fa-trash"></i></a>
      <% } } %>
    </div>
  </a>

  <% }) %>
</div>
