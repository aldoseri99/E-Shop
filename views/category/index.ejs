<h3 class="category-header">categories</h3>

<div class="category-container">
  <% categories.forEach(function(category){ %>

  <a href="/category/details?id=<%= category._id %>">
    <div class="category-card">
      <img
        src="/categoryImages/<%= category.image %>"
        alt="<%= category.name %> image"
        style="width: 200px; height: auto"
      />

      <h2 class="category-name"><%= category.name %></h2>

      <% if(user){ if(user.type === 'seller' || user.type === 'admin') { %>
      <a
        class="btn btn-outline-secondary"
        href="/category/edit?id=<%= category._id %>"
        >edit</a
      >
      <a
        class="btn btn-outline-secondary"
        href="/category/delete?id=<%= category._id %>"
        >delete</a
      >
      <% } } %>
    </div>
  </a>

  <% }) %>
</div>
