<h1>edit item</h1>

<form action="/item/update" method="POST" enctype="multipart/form-data">
  <div>
    <label class="form-label">category</label>
    <select name="category" class="form-control">
      <% categories.forEach(function(category) { %>
        <option value="<%= category._id %>" <%= category._id.equals(item.category) ? 'selected' : '' %>>
          <%= category.name %>
        </option>
      <% }) %>
    </select>
  </div>

  <div>
    <label class="form-label">name</label>
    <input
      type="text"
      name="name"
      class="form-control"
      value="<%= item.name %>"
    />
  </div>

  <div>
    <label class="form-label">price</label>
    <input
      type="text"
      name="Price"
      class="form-control "
      value="<%= item.Price %>"
    />
  </div>

  <div>
    <label class="form-label">quantity</label>
    <input
      type="text"
      name="qty"
      class="form-control"
      value="<%= item.qty %>"
    />
  </div>

  <div>
    <label class="form-label">description</label>
    <input
      type="text"
      name="description"
      class="form-control"
      value="<%= item.description %>"
    />
  </div>

  <div>
    <label class="form-label">images</label>
    <br>
    <% item.image.forEach((img) => { %>

      <img src="/itemImages/<%= img %>" alt="Item Image" style="width: 100px; height: auto;">



    <% }) %>
  </div>

  <div>

    <label class="form-label">replace Images</label>

    <br>
    <input type="file" name="images" class="form-control" multiple>
  </div>

  <input type="hidden" name="id" value="<%= item._id %>" />

  <button type="submit" class="btn btn-primary"><i class="fa-solid fa-circle-check"></i></button>
</form>