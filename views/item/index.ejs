<div class="item-container">
  <% items.forEach(function(item) { %> <% if(item.status === 'available') { %>

  <div class="item-card" style="margin-bottom: 20px">
    <a href="/item/details?id=<%= item._id %>">
      <img
        src="/itemImages/<%= item.image[0] %>"
        alt="<%= item.name %> image"
        style="
          width: 200px;
          height: 200px;
          object-fit: cover;
          object-position: bottom;
        "
      />
    </a>

    <div class="card-body">
      <h3 class="card-title"><%= item.name %></h3>

      <p><%= item.Price %>BD</p>

      <% if(user) { if((user.type === 'seller' && item.userId === user._id) ||
      user.type === 'admin') { %>
      <a class="btn btn-outline-secondary" href="/item/edit?id=<%= item._id %>">
        <i class="fa-solid fa-pen-to-square"></i>
      </a>
      <a
        class="btn btn-outline-secondary"
        href="/item/delete?id=<%= item._id %>"
      >
        <i class="fa-solid fa-trash"></i>
      </a>
      <% } } %>
    </div>
  </div>

  <% } %> <% }) %>
</div>
