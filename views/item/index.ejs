


<div class="item-container">
<% items.forEach(function(item) { %>

  <a href="/item/details?id=<%= item._id %>">
<div class="item-card" style="margin-bottom: 20px; ">
  <img
    src="/itemImages/<%= item.image[0] %>"
    alt="<%= item.name %> image"
    style="width: 200px; height: auto"
  />

  <h3>
   <%= item.name %>
  </h3>

  <p>$ <%= item.Price %></p>

  
  <% if(user){ if(user.type === 'seller' || user.type === 'admin') { %>
  <a class="btn btn-outline-secondary" href="/item/edit?id=<%= item._id %>"><i class="fa-solid fa-pen-to-square"></i></a>
  <a class="btn btn-outline-secondary" href="/item/delete?id=<%= item._id %>"><i class="fa-solid fa-trash"></i><a>

  <% }}else{ %>
  <form action="/cart/addToCart" method="POST" style="display: inline">
    <input type="hidden" name="id" value="<%= item._id %>" />
    <button type="submit"><i class="fa-solid fa-cart-plus"></i></button>
  </form>

  <% } %>
</div>
</a>


<% }) %>
</div>